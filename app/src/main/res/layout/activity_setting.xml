<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="547dp"
        android:layout_height="880dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:paddingTop="0dp"
        android:src="@drawable/main_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gifView"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logoani_mini" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="SETTING"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/color01"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/color01" />

            <ImageView
                android:id="@+id/color02"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/coror02" />

            <ImageView
                android:id="@+id/color03"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/color03" />

        </LinearLayout>




        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/left_button"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="bottom"
            android:background="#00000000"
            android:src="@drawable/btn1"/>
        <ImageButton
            android:id="@+id/center_button"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="bottom"
            android:background="#00000000"
            android:src="@drawable/btn2"/>
        <ImageButton
            android:id="@+id/right_button"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="bottom"
            android:background="#00000000"
            android:src="@drawable/btn3"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/bar01"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bar" />
            <ImageView
                android:id="@+id/bar02"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bar" />
            <ImageView
                android:id="@+id/bar03"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bar" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
